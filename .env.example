# Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=AdClass AI Platform
DEBUG=true
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://adclass:adclass_secret@localhost:5432/adclass_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ===========================================
# KAFKA
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=adclass-consumers

# ===========================================
# META MARKETING API
# ===========================================
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
META_API_VERSION=v18.0

# ===========================================
# GOOGLE ADS API
# ===========================================
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# ===========================================
# TIKTOK ADS API
# ===========================================
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=
TIKTOK_ACCESS_TOKEN=

# ===========================================
# ML MODELS
# ===========================================
MODEL_STORAGE_PATH=/models
MLFLOW_TRACKING_URI=http://localhost:5000

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-bytes-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# STORAGE (S3/MinIO)
# ===========================================
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=adclass-assets

# ===========================================
# MONITORING
# ===========================================
SENTRY_DSN=
LOG_LEVEL=INFO
